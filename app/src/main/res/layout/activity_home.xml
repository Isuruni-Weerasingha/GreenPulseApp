<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image" />

    <!-- Options Section -->

    <!-- Popular Courses Section -->

    <TextView
        android:id="@+id/questionText"
        android:layout_width="373dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:text="       A Greener Tomorrow Starts Today"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/optionsGrid"
        android:layout_width="407dp"
        android:layout_height="390dp"
        android:layout_marginTop="48dp"
        android:columnCount="2"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionText">

        <!-- Option 1 -->
        <LinearLayout
            android:layout_width="174dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:background="@color/teal_200"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="79dp"
                android:layout_height="71dp"
                app:srcCompat="@drawable/learn" />

            <TextView
                android:layout_width="92dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:text="      Learn"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Option 2 -->
        <LinearLayout
            android:layout_width="169dp"
            android:layout_height="156dp"
            android:layout_margin="8dp"
            android:background="@color/orange"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="92dp"
                android:layout_height="85dp"
                app:srcCompat="@drawable/daily" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Daily Action"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Option 3 -->
        <LinearLayout
            android:layout_width="176dp"
            android:layout_height="165dp"
            android:layout_margin="8dp"
            android:background="@color/pink"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="73dp"
                android:layout_height="76dp"
                app:srcCompat="@drawable/tracker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:text=" Progress Tracker"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Option 4 -->
        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="167dp"
            android:layout_margin="8dp"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="86dp"
                android:layout_height="89dp"
                app:srcCompat="@drawable/commit" />

            <TextView
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="     Community "
                android:textSize="16sp" />

        </LinearLayout>

    </GridLayout>

    <TextView
        android:id="@+id/popularCoursesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="@string/popular_courses"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/optionsGrid" />

    <TextView
        android:id="@+id/seeAllText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:text="@string/see_all"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/popularCoursesText" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="48dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/forest"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="59dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
